@model IEnumerable<MVCpracticeApp.Models.Trip>

@{
    Layout = "_Layout";

}

@section AddBtn {

    <button>@Html.ActionLink("Add New Trip", "create", "trip")</button>
}

<h3>Trip</h3>
<p>Here are the last five trips </p>

@foreach (var trip in Model)
{
    <h1>@Html.ActionLink(trip.Name, "trip", "trip", new { Id = trip.Id })</h1>
}

